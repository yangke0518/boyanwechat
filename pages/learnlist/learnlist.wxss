/* pages/learnlist/learnlist.wxss */

.learnlist .check-ques{
  padding-top: 19rpx;
  overflow-y: scroll;
  background: #fff;
  padding-bottom: 120rpx;
}
.learnlist .check-ques .title{
  font-size: 34rpx;
  color: #1D2B40;
  padding: 9rpx 50rpx 9rpx 50rpx;
  display: block;
}
.learnlist .check-ques .ul{
  padding: 0 18rpx 0 12rpx;
}
.learnlist .check-ques .ul .li{
  width: 65rpx;
  height: 65rpx;
  margin: 31rpx 40rpx;
  border-radius: 50%;
  line-height: 65rpx;
  text-align: center;
  font-size: 24rpx;
  background: #7D90AB;
  color: #fff;
  float: left;
}
.learnlist .check-ques .ul .checked{
  background: #FAFAFA !important;
  color: #000 !important;
  border: 2rpx solid #C0C6CC !important;
}
.learnlist .check-ques .ul .warining{
  background: #FF7112 !important;
  color: #fff !important;
}

.learnlist .footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.learnlist .footer .answer{
  font-size: 36rpx;
  color: #7D90AB;
  text-align: center;
  line-height: 110rpx;
  box-shadow:0px 0px 6px rgba(0,0,0,0.16);
  flex: 1;
  background: #fff;
}
.learnlist .footer .tell{
  font-size: 36rpx;
  color: #fff;
  background: #146BB3;
  text-align: center;
  line-height: 110rpx;
  flex: 1;
}